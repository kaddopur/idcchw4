border-radius(val)
  -webkit-border-radius: val
  -moz-border-radius: val
  border-radius: val

inner-shadow(val)
   -moz-box-shadow:    inset 0 0 val #ccc
   -webkit-box-shadow: inset 0 0 val #ccc
   box-shadow:         inset 0 0 val #ccc

.container
  margin-top: 20px

.post
  padding: 10px

.post:hover
  background: #f5f5f5
  border-radius: 4px
  inner-shadow: 3px

